<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dip">
        <ImageView
            android:id="@+id/contact_item_image"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:background="@drawable/plus"/>
        <TextView 
            android:id="@+id/contact_item_name" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/contact_item_image"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>         
        <TextView 
            android:id="@+id/contact_item_number" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/contact_item_name"
            android:layout_below="@id/contact_item_name"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:textColor="#000000"/> 
</RelativeLayout>
